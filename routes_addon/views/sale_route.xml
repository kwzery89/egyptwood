<data>
    <record id="sale_route_form" model="ir.ui.view">
        <field name="name">sale.route.form</field>
        <field name="model">sale.route</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" string="Validate" type="object" class="oe_highlight" states="draft"/>
                    <button name="action_cancel" string="Cancel" type="object" class="oe_highlight" states="draft"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,validate"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" attrs="{'invisible': [('name','=','/')]}" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date_from"/>
<!--                            <field name="partner_id"/>-->
<!--                            <field name="date"/>-->
                        </group>
                        <group>
                            <field name="date_to"/>
<!--                            <field name="vehicle_id"/>-->
<!--                            <field name="driver_id"/>-->
                        </group>
                    </group>
                    <notebook>
                        <page name="route_lines" string="Route Lines">
                            <!-- add  context="{'default_field' : field}" to set default value -->
                            <field name="route_line_ids">
                                <tree editable="bottom">
                                    <!-- add  domain="[('id','=',parent.field)]" to set default domain -->
                                    <field name="sale_route_id" invisible="1"/>
                                    <field name="partner_id"/>
                                    <field name="date"/>
                                    <field name="vehicle_id"/>
                                    <field name="driver_id"/>
                                    <field name="state_id"/>
                                    <field name="city"/>
                                    <field name="quotation_created" invisible="1"/>
                                    <button name="create_quotation"
                                            string="Create Quotation"
                                            type="object"
                                            attrs="{'invisible':['|',('quotation_created','=',True),('parent.state','!=','validate')]}"
                                            class="oe_highlight"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

    <record id="sale_route_tree" model="ir.ui.view">
        <field name="name">sale.route.tree</field>
        <field name="model">sale.route</field>
        <!--<field name="field_parent">children_ids if_want_to_add_Childs</field>-->
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </tree>
        </field>
    </record>

    <record id="sale_route_action" model="ir.actions.act_window">
        <field name="name">Sale Route</field>
        <field name="res_model">sale.route</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="sale_route_menu"
              name="Sale Route"
              action="sale_route_action"
              sequence="150"/>
</data>