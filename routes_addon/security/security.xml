<data>
    <record id="category_sale_routes" model="ir.module.category" >
        <field name="name">Sale Routes</field>
    </record>

    <record id="group_sale_route_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="category_sale_routes"/>
    </record>

    <record id="group_sale_route_admin" model="res.groups">
        <field name="name">Sale Route Admin</field>
        <field name="category_id" ref="category_sale_routes"/>
        <field name="implied_ids" eval="[(4, ref('group_sale_route_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>


    <record id="user_sale_route" model="ir.rule">
        <field name="name">Sale Routes</field>
        <field name="model_id" search="[('model','=','sale.route')]" model="ir.model"/>
        <field name="groups" eval="[(4, ref('group_sale_route_user'))]"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
    </record>

    <record id="user_sale_route_all" model="ir.rule">
        <field name="name">All Sale Routes</field>
        <field name="model_id" search="[('model','=','sale.route')]" model="ir.model"/>
        <field name="groups" eval="[(4, ref('group_sale_route_admin'))]"/>
        <field name="domain_force">[(1,'=', 1)]</field>
    </record>
</data>